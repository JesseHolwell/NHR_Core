@{
    ViewData["Title"] = "NOTHING HURTS ROBOT";

    var shows = new Dictionary<string, string>
    ()
{
    { "3 Jul", "Rod Laver, Melbourne" },
    { "6 Jul", "Rainbow Serpent, Lexton" },
    { "8 Jul", "MTV Awards, New York" },
    };
}

<div class="parent-sections">
    <div class="text-center sections row">

        <div class="title section col-12">
            <h1 class="display-4">NOTHING HURTS ROBOT</h1>
        </div>

        <div class="social section col-12">
            <h2 class="mb-4">social media</h2>
            <div class="row">
                <div class="offset-md-4 col-md-4 col-12">
                    <div class="row text-center">
                        <div class="col-md-4 col-4">
                            <button class="btn btn-info btn-full"><i class="fab fa-facebook-f"></i></button>
                        </div>
                        <div class="col-md-4 col-4">
                            <button class="btn btn-info btn-full"><i class="fab fa-spotify"></i></button>
                        </div>
                        <div class="col-md-4 col-4">
                            <button class="btn btn-info btn-full"><i class="fab fa-soundcloud"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="album section col-12">
            @*<h2>latest album name</h2>
                <div>
                    [art here]
                </div>*@
            <button class="btn btn-outline-primary">stream/download</button>
        </div>

        <div class="shows section col-12">
            <div class="row">
                <div class="offset-md-3 col-md-6 col-12">
                    <div class="content-background">
                        <h3 class="mb-3 p-2">upcoming shows</h3>
                        @foreach (var show in shows)
                        {
                            <div class="row mb-3 show-content">
                                <div class="offset-md-1 col-md-2 col-3">
                                    <span>@show.Key</span>
                                </div>
                                <div class="col-md-6 col-6">
                                    <span>@show.Value</span>
                                </div>
                                <div class="col-md-2 col-3">
                                    <button class="btn btn-secondary"><i class="fas fa-ticket-alt"></i></button>
                                </div>
                            </div>
                        }
                        <button class="btn btn-primary mb-3 mt-2">More</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="mail section col-md-6 col-12">
            <div class="row">
                <div class="offset-md-2 col-md-8">
                    <div class="content-background p-2">
                        <h3 class="mt-4">join our mailing list</h3>
                        <h4 class="mb-4">never miss an update</h4>

                        <input class="form-control mb-3" value="email address" />
                        <button class="btn btn-primary mb-3">Subscribe</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="merch section col-md-6 col-12">
            <div class="row">
                <div class="offset-md-2 col-md-8">
                    <div class="content-background p-2">
                        <h3 class="mt-4" style="        margin-bottom: 10.5rem !important;">merch</h3>  @*Hacky style to satisfy client for now*@
                        <div class="mb-3">
                            <button class="btn btn-primary">Buy</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="connect section col-12">
            <div class="row">
                <div class="offset-md-4 col-md-4 col-12">
                    <div class="content-background p-2">
                        <h4 class="m-2">Connect</h4>
                        <div class="mb-3">
                            <a href="mailto:nothinghurtsrobot@gmail.com">nothinghurtsrobot@gmail.com</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<style>

    /*Main*/

    body {
    }

        body h1, body h2 {
            text-shadow: 0px 2px 8px #000000;
        }

        body h1 {
            /*font-size: 5rem;*/
            /*letter-spacing: 40px;*/
        }

        body h2 {
            font-size: 4rem;
        }

        body h3 {
            font-size: 3rem;
        }

    /*MVC override*/

    .navbar {
        color: white;
        background-color: black;
    }

    body header .navbar {
        margin-bottom: 0px;
        background-color: #071d27;
        border-bottom: 1px solid #00b9ff;
    }

    body .footer {
        background-color: black;
        border-top: 1px solid #00b9ff;
    }

    /*Scrollbar*/

    body::-webkit-scrollbar {
        width: 1em;
        background-color: #333;
    }

    body::-webkit-scrollbar-track {
        -webkit-box-shadow: inset 0 0 6px rgba(0, 185, 255, 0.80);
    }

    body::-webkit-scrollbar-thumb {
        background-color: darkgrey;
        outline: 1px solid slategrey;
    }

    /*Controls*/

    .btn-full {
        width: 100%;
        margin-bottom: 1rem;
    }

    .content-background {
        background-color: rgba(50, 50, 50, 0.75);
        border-radius: 50px
    }

    .show-content {
        font-weight: 400;
        font-size: 1.2rem;
    }

    /*Sections*/

    .parent-sections {
        overflow-x: hidden;
